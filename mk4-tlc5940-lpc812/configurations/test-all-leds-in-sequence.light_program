// Light program that lights up all LEDs in sequence
//
// * All LEDs light up for 2 seconds
// * LED0 lights for 1 second
// * LED1 lights for 1 second
// * LED2 lights for 1 second
// * ...
// * LED15 lights for 1 second
// * All LEDs light up for 2 seconds
// * LED0 lights for 1 second
// * ...
run always

use all leds

loop:
    all leds = 100
    sleep 2000

    all leds = 0
    led[0] = 100
    sleep 1000

    all leds = 0
    led[1] = 100
    sleep 1000

    all leds = 0
    led[2] = 100
    sleep 1000

    all leds = 0
    led[3] = 100
    sleep 1000

    all leds = 0
    led[4] = 100
    sleep 1000

    all leds = 0
    led[5] = 100
    sleep 1000

    all leds = 0
    led[6] = 100
    sleep 1000

    all leds = 0
    led[7] = 100
    sleep 1000

    all leds = 0
    led[8] = 100
    sleep 1000

    all leds = 0
    led[9] = 100
    sleep 1000

    all leds = 0
    led[10] = 100
    sleep 1000

    all leds = 0
    led[11] = 100
    sleep 1000

    all leds = 0
    led[12] = 100
    sleep 1000

    all leds = 0
    led[13] = 100
    sleep 1000

    all leds = 0
    led[14] = 100
    sleep 1000

    all leds = 0
    led[15] = 100
    sleep 1000

    goto loop

end
